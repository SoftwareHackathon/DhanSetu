<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="120dp"
        android:paddingBottom="220dp"
        android:background="#f5f5f5"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:elevation="16dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/white"
            app:cardCornerRadius="16dp">


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:shadowColor="#55000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="Split Money"
                    android:textColor="#D6C058"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Total Amount -->
                <EditText
                    android:id="@+id/totalAmountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total Amount"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="12dp" />

                <!-- Amount to Split -->
                <EditText
                    android:id="@+id/amountToSplitEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount to Split"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="12dp" />

                <!-- Friend's Name -->
                <EditText
                    android:id="@+id/friendNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Friend's Name"
                    android:layout_marginBottom="12dp" />

                <!-- Friend's Phone -->
                <EditText
                    android:id="@+id/friendPhoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Friend's Phone"
                    android:inputType="phone"
                    android:layout_marginBottom="24dp" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CANCEL"
                        android:textColor="@android:color/black"
                        android:background="@drawable/button_border2" />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAVE"
                        android:backgroundTint="#D6C058"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_border" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
