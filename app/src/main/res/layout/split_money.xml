<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI Money Transfer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Split Money"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Total Amount -->
        <EditText
            android:id="@+id/totalAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Amount"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <!-- Amount to Split -->
        <EditText
            android:id="@+id/amountToSplitEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount to Split"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <!-- Friend's Name -->
        <EditText
            android:id="@+id/friendNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friend's Name"
            android:layout_marginBottom="12dp" />

        <!-- Friend's Phone -->
        <EditText
            android:id="@+id/friendPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friend's Phone"
            android:inputType="phone"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textColor="@android:color/black"
                android:background="@drawable/button_border2" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAVE"
                android:backgroundTint="#000000"
                android:textColor="@android:color/white"
                android:background="@drawable/button_border"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
